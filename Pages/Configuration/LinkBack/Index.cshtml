@page
@model StrongBartending.Pages.Configuration.LinkBack.IndexModel

@{
    ViewData["Title"] = "Index";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Linkbacks[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Linkbacks[0].Url)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Linkbacks) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Url)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.LinkKey">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.LinkKey">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.LinkKey">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
