@page
@model StrongBartending.Pages.EventDetail.DeleteModel

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Event Details</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Description
        </dt>

        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.EventDetails.Description)
        </dd>
        <dt class="col-sm-2">
            Price
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.EventDetails.Price)
        </dd>
        <dt class="col-sm-2">
            Status
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.EventDetails.LineStatNavigation.Description)
        </dd>
        <dt class="col-sm-2">
            Service
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.EventDetails.ServiceKeyNavigation.Description)
        </dd>
    </dl>
    
    <form method="post">
        <input type="hidden" asp-for="EventDetails.LineKey" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-page="./Index" asp-route-id="@Model.EventDetails.LeadKey">Back to List</a>
    </form>
</div>
