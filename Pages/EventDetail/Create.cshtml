@page
@model StrongBartending.Pages.EventDetail.CreateModel

@{
    ViewData["Title"] = "Create";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1>Create</h1>

<h4>Event Details</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label class="control-label">Legacy ID</label>
                <input class="form-control" value="@Model.Leads.LegacyId" readonly/>
            </div>

            <div class="form-group"  hidden>
                <label asp-for="EventDetails.LeadKey" class="control-label"></label>
                <input asp-for="EventDetails.LeadKey" class="form-control" value="@Model.Leads.LeadKey" />
                <span asp-validation-for="EventDetails.LeadKey" class="text-danger"></span>
            </div>

            <div class="form-group" hidden>
                <label asp-for="EventDetails.EventKey" class="control-label"></label>
                <input asp-for="EventDetails.EventKey" class="form-control" />
                <span asp-validation-for="EventDetails.EventKey" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Services</label>
                <select asp-for="EventDetails.ServiceKey" class="form-control" asp-items="ViewBag.ServiceKey"></select>
            </div>
            <div class="form-group">
                <label class="control-label">Description</label>
                <input asp-for="EventDetails.Description" class="form-control" />
                <span asp-validation-for="EventDetails.Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Price</label>
                <input asp-for="EventDetails.Price" class="form-control" />
                <span asp-validation-for="EventDetails.Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
