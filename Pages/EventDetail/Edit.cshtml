@page
@model StrongBartending.Pages.EventDetail.EditModel

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1>Edit</h1>

<h4>Event Details</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="EventDetails.LineKey" />
            <div class="form-group" >
                <label class="control-label">Status</label>
                <select asp-for="EventDetails.LineStat" class="form-control" asp-items="ViewBag.LineStat" readonly></select>
                <span asp-validation-for="EventDetails.LineStat" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Service</label>
                <select asp-for="EventDetails.ServiceKey" class="form-control" asp-items="ViewBag.ServiceKey"></select>
                <span asp-validation-for="EventDetails.ServiceKey" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Description</label>
                <input asp-for="EventDetails.Description" class="form-control" />
                <span asp-validation-for="EventDetails.Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Price</label>
                <input asp-for="EventDetails.Price" class="form-control" />
                <span asp-validation-for="EventDetails.Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
