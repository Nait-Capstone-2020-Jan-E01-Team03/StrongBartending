@page
@model StrongBartending.Pages.Lead.IndexModel

@{
    ViewData["Title"] = "Index";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Leads[0].LegacyId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Leads[0].LeadStat)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Leads[0].EventDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Leads[0].StartTime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Leads[0].EventType)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Leads) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.LegacyId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LeadStat)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EventDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StartTime)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EventType)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.LeadKey">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.LeadKey">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.LeadKey">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
